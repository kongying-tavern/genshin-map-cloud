<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.yuanshen.data.mapper.ItemTypeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="site.yuanshen.data.entity.ItemType">
        <id column="id" property="id"/>
        <result column="version" property="version"/>
        <result column="creator_id" property="creatorId"/>
        <result column="updater_id" property="updaterId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="del_flag" property="delFlag"/>
        <result column="icon_tag" property="iconTag"/>
        <result column="name" property="name"/>
        <result column="content" property="content"/>
        <result column="parent_id" property="parentId"/>
        <result column="is_final" property="isFinal"/>
        <result column="hidden_flag" property="hiddenFlag"/>
        <result column="sort_index" property="sortIndex"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        version,
        creator_id,
        updater_id,
        create_time,
        update_time,
        del_flag,
        id, icon_tag, name, content, parent_id, is_final,hidden_flag,sort_index
    </sql>


    <select id="selectListWithLargeIn" resultType="site.yuanshen.data.entity.Item">
        with id_list as ( select unnest(${unnest}::bigint[]) "id2")
        select
        <if test="ew.SqlSelect ==null or ew.SqlSelect == ''">
            <include refid="Base_Column_List"/>
        </if>
        ${ew.SqlSelect}
        from
        item_type, id_list
        <if test="ew.customSqlSegment ==null or ew.customSqlSegment == ''">
            where del_flag = 0
        </if>
        ${ew.customSqlSegment} and del_flag = 0 and item_type.id=id_list.id2
    </select>

    <select id="selectWithLargeCustomIn" resultType="site.yuanshen.data.entity.Item">
        with id_list as ( select unnest(${unnest}::bigint[]) "${column}2")
        select
        <if test="ew.SqlSelect ==null or ew.SqlSelect == ''">
            <include refid="Base_Column_List"/>
        </if>
        ${ew.SqlSelect}
        from
        item_type, id_list
        <if test="ew.customSqlSegment ==null or ew.customSqlSegment == ''">
            where del_flag = 0
        </if>
        ${ew.customSqlSegment}  and del_flag = 0 and item_type.${column} = id_list."${column}2"
    </select>



</mapper>
