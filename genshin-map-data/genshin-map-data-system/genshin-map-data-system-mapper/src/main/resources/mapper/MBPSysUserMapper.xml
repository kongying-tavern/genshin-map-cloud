    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        su.creator_id,
        su.create_time,
        su.del_flag,
        su.version,
        su.id,
        su.updater_id,
        su.update_time,
        su.username,
        su.password,
        su.nickname,
        su.qq,
        su.phone,
        su.logo,
        su.role_id,
        su.access_policy
