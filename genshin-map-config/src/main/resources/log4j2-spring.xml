        <!--                &lt;!&ndash;达到预设的大小时生成压缩文件&ndash;&gt;-->
        <!--                <SizeBasedTriggeringPolicy size="${LOG_FILESIZE}"/>-->
        <!--            </Policies>-->
        <!--            &lt;!&ndash; 最多备份7天以内的日志，此处为策略限制，Delete中可以按自己需要用正则表达式编写 &ndash;&gt;-->
